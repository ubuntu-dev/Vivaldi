let assert(test, err) = if !test: do
  puts("\033[91m✗\033[39m " + err)
  quit()
end

let section(name) = puts("\033[94m===\033[39m " + name + " \033[94m===\033[39m")

let test(code, name) = do
  try: do
    code()
    puts("\033[92m✓\033[39m " + name)
  end
  catch e: assert(false, "caught exception: " + e)
end
